pipeline {
    agent any
    environment {
        DB_PASSWORD = credentials('databasepassword')
        MANISHA_USERNAME_PASSWORD = credentials('maniUsrPwd')
    }

    stages{
        stage('Accessing Credentials'){
             steps{
                sh ('echo My DB password is: ${DB_PASSWORD}')
                sh ('echo username is: ${MANISHA_USERNAME_PASSWORD_USR}')
                sh ('echo mypaswrd is: ${MANISHA_USERNAME_PASSWORD_PSW}')
             }
             
             
        }

    }
}